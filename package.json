{
  "name": "chii",
  "version": "0.34.0",
  "description": "tools to bundle openapi spec, not used in our server",
  "private": true,
  "scripts": {
    "format": "prettier -w --list-different ./",
    "test": "node openapi/test.js",
    "build-common": "node scripts/build-common.mjs",
    "build": "node ./openapi/build.js"
  },
  "prettier": {
    "printWidth": 120
  },
  "dependencies": {
    "@apidevtools/json-schema-ref-parser": "^15.2.2",
    "js-yaml": "^4.1.1",
    "lodash": "^4.17.23",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@types/json-schema": "^7.0.15",
    "colors": "^1.4.0",
    "oas-validator": "^5.0.8",
    "prettier": "^3.8.1"
  },
  "nodemonConfig": {
    "restartable": "rs",
    "ignore": [
      "**_test.go",
      ".git"
    ],
    "legacyWatch": true,
    "delay": 2000,
    "exec": "task web",
    "ext": "go,json,html"
  },
  "packageManager": "yarn@1.22.22"
}
